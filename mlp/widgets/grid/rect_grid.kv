<-RectCellWidget>:
    id: cell
    canvas.after:
        PushMatrix
        Translate:
            xy: self.pos
        Color:
            rgba: 0, 0, 0, 0.5*self.is_highlighted
        Mesh:
            vertices: self.mesh_vertices
            mode: 'triangle_fan'
            indices: range(4)
        Color:
            rgba: 1.0, 0, 0, 1.0*self.is_selected
        Line:
            points: self.circuit
            width: 1.5
        PopMatrix
