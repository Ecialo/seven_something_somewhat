RelativeLayout:
    NotificationsManager:
        id: nm
    Button:
        text: "Add notification"
        height: 30
        size_hint: 1, None
        on_press: nm.notify("Blah")
        pos_hint: {'x': 0.0, 'y': 0.0}


<Notification>:
    text: self.text
    size_hint: 1, None
    height: dp(30)
    canvas.before:
        Color:
            rgba: 0.5, 0.2, 0.2, 1
        Rectangle:
            size: self.size
            pos: self.pos

<NotificationsManager@StackLayout>:
    orientation: 'lr-tb'
    size_hint: 1, 0
    spacing: [0, 1]
#    size: (0, 0)
    pos_hint: {'x': 0.0, 'y': 1.0}