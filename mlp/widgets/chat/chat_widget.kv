<-ChatWidget@BoxLayout>:
    id: chat_widget
    pos_hint: {'right': 1.0}
    size_hint_y: None
    height: dp(200)
    orientation: 'vertical'

    ScrollView:
        id: chatlog_view
        canvas.before:
            Color:
                rgba: 0.15, 0.15, 0.15, 0.9
            Rectangle:
                pos: self.pos
                size: self.size

        Label:
            id: chatlog
            halign: 'left'
            valign: 'top'

            # add a 5px margin around the texture
            text_size: self.width - dp(10), None

            # make label scrollable
            size_hint_y: None
            height: self.texture_size[1]

    TextInput:
        id: input_field
        size_hint_y: None

        height: dp(self.font_size * 2)
        multiline: False
